<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/iv_doublenews"

                >
                <TextView
                    android:id="@+id/title_doublenews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:textColor="#000000"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/digest_doublenews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="该条新闻的概述"
                    android:textColor="#000000"
                    android:textSize="12sp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_doublenews"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_doublenews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑时间"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/source_doublenews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻来源"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>